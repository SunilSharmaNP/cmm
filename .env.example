# 21. .env.example - Environment variables template

# Copy this file to .env and fill in your values

# ================================
# REQUIRED CONFIGURATION
# ================================

# Telegram Bot Configuration
TG_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxyz
APP_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890
BOT_USERNAME=your_bot_username_without_at

# Admin Configuration
AUTH_USERS=123456789 987654321
LOG_CHANNEL=@your_log_channel

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/videocompressbot

# ================================
# OPTIONAL CONFIGURATION  
# ================================

# Force Subscription (leave empty to disable)
UPDATES_CHANNEL=Discovery_Updates

# Bot Configuration
SESSION_NAME=EnhancedCompressorBot

# File Size Limits (in bytes)
MAX_FILE_SIZE=4294967296
TG_MAX_FILE_SIZE=2097152000
FREE_USER_MAX_FILE_SIZE=1073741824

# Download Configuration
DOWNLOAD_LOCATION=./downloads
ALLOWED_FILE_TYPES=mp4,mkv,avi,mov,wmv,flv,webm,m4v,3gp,ts,mts,m2ts

# Compression Settings
DEFAULT_COMPRESSION=50
MIN_COMPRESSION=10
MAX_COMPRESSION=90
DEFAULT_OUTPUT_FORMAT=mp4

# Performance Configuration
MAX_CONCURRENT_PROCESSES=3
ENABLE_QUEUE=True
QUEUE_SIZE=10
MAX_WORKERS=4

# Rate Limiting
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_WINDOW=60
BAN_DURATION_FLOOD=3600

# Progress Display
FINISHED_PROGRESS_STR=▓
UN_FINISHED_PROGRESS_STR=░
SHOULD_USE_BUTTONS=True

# Logging Configuration
LOG_FILE_ZZGEVC=logs/bot.log

# Security Configuration
ENABLE_BACKUP=False
BACKUP_CHANNEL=

# Network Configuration (optional)
HTTP_PROXY=
TIMEOUT_DOWNLOAD=3600
TIMEOUT_UPLOAD=3600
CHUNK_SIZE=1048576

# Database Performance
DB_POOL_SIZE=10
DB_MAX_IDLE_TIME=300

# Thumbnail Configuration
DEF_THUMB_NAIL_VID_S=https://telegra.ph/file/4a48f5c40c68ac14be2f5.jpg
CUSTOM_THUMBNAIL_ENABLED=True

# Command Customization (optional)
COMMAND_START=start
COMMAND_COMPRESS=compress
COMMAND_CANCEL=cancel
COMMAND_HELP=help
COMMAND_STATUS=status
COMMAND_EXEC=exec
COMMAND_LOGS=logs
COMMAND_BROADCAST=broadcast
COMMAND_BAN=ban
COMMAND_UNBAN=unban
